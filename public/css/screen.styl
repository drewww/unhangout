/*
 * Chat
 */

#chat-input-region {
  padding: 0px
  background-color: #eee

  & > div {
    display: table
    width: 100%
  }

  form {
    display: table-row
    width: 100%
  }

  label.admin {
    display: table-cell
    color: orange
  }

  #chat-input {
    display: table-cell
    width: 100%
  }


}

#chat {
  height: 100%;

  #chat-whiteboard{
    border-bottom: 1px solid silver;

    #whiteboard-message, #whiteboard-form textarea{
      border: 1px solid silver;
      padding: 15px;
      border-radius: 5px;
      background: white;
      width: 100%;
    }

    #whiteboard-form{
      display: none;
    }

    #whiteboard-form textarea{
      border: 1px dashed silver;
      resize: none;
    }

    #whiteboard-message {
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .chat-archive-link {
      text-align: right;
    }

    #whiteboard-buttons button, #whiteboard-form button {
      padding-left: 10px;
      padding-right: 10px;
    }

    #whiteboard-buttons button {
      margin-top: 3px;
    }
    #whiteboard-buttons, #whiteboard-form {
      margin-bottom: -12px;
    }

    .edit-whiteboard {
      background-color: #f3bd71;
      border-color: #f90;
    }

    .edit-whiteboard:hover {
      background-color: #f90;
    }
    
  }

  .over-capacity-warning {
    display: none;
    box-sizing: border-box;
    position: fixed;
    max-width: 370px;
    bottom: 3em;
    padding: 1em;
    height: 5em;
    opacity: 0.9;
    background-color: #fee;
    border: 1px solid red;
  }

  #chat-container-region {
    height: 100%;
    padding: 10px;
    border-radius: 2px;
    background-color: #eee;

    chat-input-height = 3em

    .panel {
      display: flex
      flex-flow: column nowrap
      height: 100%;
      width: 100%;
      background-color: #eee;
    }
    .panel-heading {
      width: 100%
      max-height: 50%
      overflow: auto
    }
    .panel-body {
      flex: 2
      height: 100%
      width: 100%
      padding: 0 15px;
      margin-right: -10px;
      overflow: auto
    }
    .panel-footer {
      height: chat-input-height
      width: 100%
      border-top: 0;
      padding: 10px 0px;  
      background-color: inherit;
    }

    #chat-list-container {
      padding-left: 0;

      .chat-message {
        word-wrap: break-word;
        list-style-type: none;
        padding-right: 10px;

        &.past {
          opacity: 0.3;
        }

        &.system {
          text-align: center;
          font-style: italic;

          padding-left: 0px;
          padding-bottom: 10px;
          padding-top: 10px;

          margin-left: 20px;
          margin-right: 20px;
          margin-bottom: 20px;

          border-bottom: 1px solid #aaa;
          .from {
            display: none;
          }
        }

        span.chat-message-author {
          font-weight: bold;

          &.admin {
            color: orange;
          }
        }

        span.chat-message-text {
          display: inline;
          word-break: break-all;
        }
      }
    }
  }
  .atname {
    border-bottom: 1px dotted green
    cursor: pointer
    &.me {
      background-color: yellow
    }
  }
}

#global {
  position: absolute;
  z-index: 1000;
}

