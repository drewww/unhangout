/* ===================== Navbar Styles =================== */

/* Home Navbar Styles */
.nav-index {
  background-color: #2E7DAA;
}

.nav-index .navbar-brand {
  color: white;
  font-size: 20px;
  letter-spacing: 1px;
  font-weight: 400;
  img {
    margin-top: -15px;
  }
}

.nav-index .dropdown {
  margin-top: -10px; 
}
  
.nav-index .container {
  height: 80px;
} 

.nav-index .navbar-header {
  margin-top: 15px;
} 

.nav-index .container .navbar-collapse {
  margin-top: 15px;
  background-color: $navbar;
} 

.nav-index .navbar-nav {
  font-size: 16px;
  letter-spacing: .5px;
  font-weight: 300;
}

.nav-index .navbar-nav > li > a {
  color: white;
}

.nav-index .navbar-nav > li > a:hover {
  color: $navbar-li;
}

.nav-index .navbar-nav>.active>a, .nav-index .navbar-nav>.active>a:hover, .nav-index .navbar-nav>.active>a:focus {
  background-color: $navbar;
  color: white;
} 

.nav .open>a, .nav .open>a:hover, .nav .open>a:focus {
  background-color: $navbar;
}

#user-menu-label {
  font-size: 15px;
  letter-spacing: 0.5px;
  font-weight: 300;  
  max-width: 250px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.profile-thumbnail {
  border-radius: 4px;
}

/* media queries for responsive navbar */

@media (max-width: 991px){ /* for small */
  #user-menu-label-name {
    display: none;
  }
}

@media(max-width: 767px){ /* for x-small */
  #user-menu-label-name {
    display: inline;
  }
  .navbar-default{
    .navbar-toggle{
      .icon-bar{
        background-color: #fff;
      }
    }
    .navbar-nav{
      .open{
        .dropdown-menu>li>a{
          color:#fff;
          font-weight: 300;
        }
        .dropdown-menu>li>a:hover{
          background-color: transparent; 
          color: $navbar-li;
        }
      }
    }
  }
}

