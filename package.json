{
  "name": "unhangout-server",
  "version": "2.0.0",
  "author": "Drew Harry <dharry@media.mit.edu>",
  "description": "a server for managing un-hangouts; large scale online un-conference-style events using Google Hangout",
  "contributors": [
    {
      "name": "Drew Harry",
      "email": "dharry@media.mit.edu"
    },
    {
      "name": "Charlie DeTar",
      "email": "cfd@media.mit.edu"
    },
    { "name": "Srishti Sethi",
      "email": "srishakatux@gmail.com"
    }
  ],
  "license":"MIT",
  "scripts": {
    "postinstall": "node ./bin/compile-assets.js",
    "start": "node ./bin/unhangout-server",
    "setup": "source conf.sh",
    "test": "NODE_ENV=testing mocha test/test.[a-c]* -g 'CREATE EVENT' -i && sleep 1 && NODE_ENV=testing mocha test/test.[a-c]* -g 'CREATE EVENT' && sleep 1 && NODE_ENV=testing mocha test/test.[d-r]* && sleep 1 && NODE_ENV=testing mocha test/test.s* -g 'SESSION JOINING' -i && sleep 1 && NODE_ENV=testing mocha test/test.session-joining.selenium.js && sleep 1 && NODE_ENV=testing mocha test/test.[t-z]*",
    "forever-start": "NODE_ENV=production forever start --minUptime 1000 --spinSleepTime 1000 -a -l unhangout.log -o logs/out.log -e logs/err.log bin/unhangout-server",
    "forever-stop": "forever stop bin/unhangout-server",
    "forever-restart": "NODE_ENV=production forever restart bin/unhangout-server",
    "forever-list": "forever list"
  },
  "main": "./lib/unhangout-server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/drewww/unhangout.git"
  },
  "dependencies" : {
    "express"   :  "3.5.1",
    "winston"   :  "0.7.3",
    "winston-mail": "0.2.7",
    "sockjs"    :  "0.3.8",
    "underscore":  "1.6.0",
    "backbone"  :  "1.1.2",
    "ejs"       :  "1.0.0",
    "node-uuid" :  "1.4.1",
    "async"     :  "0.2.10",
    "passport"  :  "0.2.0",
    "passport-google-oauth":"0.1.5",
    "redis"     :  "0.10.1",
    "connect-redis":"1.4.7",
    "moment"    :  "2.5.1",
    "moment-timezone": "*",
    "googleapis":  "0.7.0",
    "gapitoken" :  "0.1.3",
    "stylus"    :  "0.42.3",
    "nib"       :  "1.0.2",
    "nodemailer":  "0.6.1",
    "caja-sanitizer": "*",
    "mkdirp"    :  "*",
    "memwatch"  :  "~0",
    "toobusy"   :  "~0",
    "bluebird"  :  "1.1.1",
    "cheerio"   :  "0.13.1",
    "requirejs-middleware": "git://github.com/yourcelf/requirejs-middleware.git#master"
  },
  "analyze": false,
  "devDependencies": {
    "mocha"     : "1.18.2",
    "superagent": "0.17.0",
    "should"    : "3.2.0-beta1",
    "expect.js" :  "0.3.1",
    "sockjs-client-ws": "git://github.com/yourcelf/sockjs-client-node.git#master",
    "selenium-webdriver": "~2",
    "libxmljs": "*",
    "simplesmtp": "~0",
    "mailparser": "~0",
    "sinon"     : "1.9.0"
  },
  "license": "BSD",
  "engines": {
    "node": ">=0.10"
  }
}
